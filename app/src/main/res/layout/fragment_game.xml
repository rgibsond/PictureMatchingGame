<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_height="match_parent"
     android:layout_width="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.rgdrys13.picturematchinggame.GameFragment"
        android:id="@+id/grid">

        <ImageButton
            android:id="@+id/i0_0"
            android:layout_column="0"
            android:layout_row="0"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_0"
            android:layout_column="1"
            android:layout_row="0"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_0"
            android:layout_column="2"
            android:layout_row="0"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_0"
            android:layout_column="3"
            android:layout_row="0"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i0_1"
            android:layout_column="0"
            android:layout_row="1"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_1"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_1"
            android:layout_column="2"
            android:layout_row="1"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_1"
            android:layout_column="3"
            android:layout_row="1"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i0_2"
            android:layout_column="0"
            android:layout_row="2"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_2"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_2"
            android:layout_column="2"
            android:layout_row="2"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_2"
            android:layout_column="3"
            android:layout_row="2"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i0_3"
            android:layout_column="0"
            android:layout_row="3"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_3"
            android:layout_column="1"
            android:layout_row="3"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_3"
            android:layout_column="2"
            android:layout_row="3"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_3"
            android:layout_column="3"
            android:layout_row="3"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i0_4"
            android:layout_column="0"
            android:layout_row="4"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_4"
            android:layout_column="1"
            android:layout_row="4"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_4"
            android:layout_column="2"
            android:layout_row="4"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_4"
            android:layout_column="3"
            android:layout_row="4"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i0_5"
            android:layout_column="0"
            android:layout_row="5"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i1_5"
            android:layout_column="1"
            android:layout_row="5"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i2_5"
            android:layout_column="2"
            android:layout_row="5"
            style="@style/image_style"
            />

        <ImageButton
            android:id="@+id/i3_5"
            android:layout_column="3"
            android:layout_row="5"
            style="@style/image_style"
            />
    </GridLayout>

    <Button
        android:id="@+id/my_button"
        android:layout_below="@id/grid"

        android:text="@string/restart_game"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:padding="@dimen/image_padding"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count_id"
        android:layout_toRightOf="@id/my_button"
        android:layout_below="@id/grid"
        android:text="@string/count_start_text"
        android:textSize="@dimen/count_text_size"
        android:textColor="@color/button_text"
        />

    <TextView
        android:id="@+id/win_text"
        android:layout_below="@id/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_text"
        android:visibility="gone"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/count_text_size"
        android:text="@string/win_condition_text"/>

</RelativeLayout>